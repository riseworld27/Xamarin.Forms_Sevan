<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:XOCV.Views;assembly=XOCV"
    x:Class="XOCV.Pages.FormsPage"
    Padding="20">
    <StackLayout
        VerticalOptions="FillAndExpand">
        <StackLayout
            Orientation="Horizontal"
            Padding="10">
            <Image
                Source="LogoSevan.png"/>
        </StackLayout>
        <Frame
            VerticalOptions="Fill"
            BackgroundColor="{StaticResource WhiteColor}">
            <StackLayout
                Padding="4"
                Orientation="Horizontal">
                <Label
                    Text="Program Name:"
                    FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout
                Padding="20">
                <views:TappedListView
                    ItemsSource="{Binding Forms}"
                    ItemClickCommand="{Binding OpenFormDetailsCommand}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Text="{Binding FormsTitle}"
                                        FontAttributes="Bold"
                                        VerticalOptions="CenterAndExpand"
                                        VerticalTextAlignment="Center"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </views:TappedListView>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>